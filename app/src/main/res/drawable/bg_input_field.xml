<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Umbră subtilă -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#33000000" /> <!-- Umbra: negru 20% opacitate -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Fundal principal alb -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Fundal ALB -->
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="#DDDDDD" /> <!-- Contur gri foarte discret -->
            <padding
                android:left="12dp"
                android:top="8dp"
                android:right="12dp"
                android:bottom="8dp" />
        </shape>
    </item>
</layer-list>
